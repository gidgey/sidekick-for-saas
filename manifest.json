{
  "manifest_version": 3,
  "name": "Sidekick for SaaS",
  "description": "For When You Really Just Need a Bridget. Turn smart comments into warm leads on X and LinkedIn.",
  "version": "0.1.0",
  "action": {
    "default_title": "Sidekick for SaaS",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*",
        "https://www.linkedin.com/*"
      ],
      "js": ["contentScript.js"],
      "css": ["sidebar.css"],
      "run_at": "document_idle"
    }
  ]
}
